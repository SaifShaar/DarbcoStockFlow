{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false, // turn off strict mode
    "noImplicitAny": false, // allow "any" everywhere
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "dist",
    "rootDir": "."
  },
  "include": [ "client", "server", "shared" ],
  "exclude": [ "node_modules", "dist", ".local" ]
}
